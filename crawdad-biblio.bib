@InProceedings{mahajan:wit,
  author      =	{R. Mahajan and M. Rodrig and D. Wetherall and J. Zahorjan},
  title	      =	{Analyzing the {MAC}-level Behavior of Wireless Networks},
  booktitle   =	{Proceedings of ACM SIGCOMM 2006},
